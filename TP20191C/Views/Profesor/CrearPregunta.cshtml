
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/ProfesoresLayout.cshtml";
}

<div id="crear-pregunta">
    <section class="titulo-pagina">
        <div class="row">
            <div class="col-sm-12">
                <h2>Crear pregunta</h2>
            </div>
        </div>
    </section>
    <div class="row">
        @using (Html.BeginForm("Ingresar", "Home", FormMethod.Post, new { @class = "col-sm-12 p-3 mb-5", @id = "form-crearPregunta" }))
        {
            <div class="form-group row">
                <label for="nro-pregunta" class="col-sm-2 col-form-label">Nro(*):</label>
                <div class="col-sm-3">
                    <input type="number" class="form-control" id="nro-pregunta">
                </div>
            </div>

            <div class="form-group row">
                <label for="nro-clase" class="col-sm-2 col-form-label float-right">Clase(*):</label>
                <div class="col-sm-3">
                    <select class="form-control" id="nro-clase">
                        <option>Seleccionas</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div> 
                <label for="temas" class="col-sm-2 col-form-label float-right">Tema(*):</label>
                <div class="col-sm-3">
                    <select class="form-control" id="temas">
                        <option>Seleccionas</option>
                        <option>Entity framework</option>
                        <option>Entity framework</option>
                        <option>Entity framework</option>
                        <option>Entity framework</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="fecha-hasta" class="col-sm-2 col-form-label float-right">Disponible desde:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="fecha-desde"/>
                </div>
                <label for="fecha-hasta" class="col-sm-2 col-form-label float-right">Hasta:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="fecha-hasta" />
                </div>
            </div>
            <div class="form-group row" >
                <label for="pregunta" class="col-sm-2 col-form-label float-right">Pregunta(*):</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="pregunta" rows="1"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-success btn-block">Crear</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-danger btn-block">Cancelar</button>
                </div>
            </div>
        }
    </div>
</div>

