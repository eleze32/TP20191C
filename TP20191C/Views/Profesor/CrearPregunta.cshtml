@model Entidades.ModelView.PreguntaViewModel

@{
    ViewBag.Title = "CrearPregunta";
    Layout = "~/Views/Shared/ProfesoresLayout.cshtml";
}

<div id="crear-pregunta">
    <section class="titulo-pagina">
        <div class="row">
            <div class="col-sm-12">
                <h2>Crear Pregunta</h2>
            </div>
        </div>
    </section>
    <section>
        @if (ViewBag.ExistePregunta != null && ViewBag.ExistePregunta)
        {
             <div class="alert alert-danger alert-dismissible fade show" role="alert">
                 Ya existe una pregunta con este número de pregunta.
                 <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                 </button>       
             </div>
            
        }
        <div class="row">
            @using (Html.BeginForm("CrearPregunta", "Profesor", null, FormMethod.Post, new
            {
                @class = "col-sm-12 p-3 mb-5",
                @id = "form-crear-pregunta"
            }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(n => n.Pregunta.Nro, "Nro(*):", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(n => n.Pregunta.Nro, new { @class = "form-control", @type = "number" })
                        @Html.ValidationMessageFor(n => n.Pregunta.Nro, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(n => n.Pregunta.IdClase, "Clase(*):", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-3">
                        @Html.DropDownListFor(n => n.Pregunta.IdClase, new SelectList(Model.Clase, "IdClase", "Nombre"), "Seleccionar",
    new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Pregunta.IdClase, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(n => n.Pregunta.IdTema, "Tema(*):", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-3">
                        @Html.DropDownListFor(n => n.Pregunta.IdTema, new SelectList(Model.Tema, "IdTema", "Nombre"), "Seleccionar",
    new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Pregunta.IdTema, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(n => n.Pregunta.FechaDisponibleDesde, "Disponible desde:", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(n => n.Pregunta.FechaDisponibleDesde, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Pregunta.FechaDisponibleDesde, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(n => n.Pregunta.FechaDisponibleHasta, "Hasta:", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(n => n.Pregunta.FechaDisponibleHasta, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Pregunta.FechaDisponibleHasta, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(n => n.Pregunta.Pregunta1, "Pregunta(*):", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(n => n.Pregunta.Pregunta1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.Pregunta.Pregunta1, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <input type="submit" class="btn btn-success btn-block" value="Crear" />
                    </div>
                    <div class="col-sm-2">
                        @Html.ActionLink("Cancelar", "AdministrarPreguntas", null, new { @class = "btn btn-danger btn-block" })
                    </div>
                </div>
            }
        </div>
    </section>
</div>