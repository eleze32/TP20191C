
@{
    ViewBag.Title = "Administrar";
    Layout = "~/Views/Shared/ProfesoresLayout.cshtml";
}


@Scripts.Render("~/bundles/admin-pregutas")
<section class="titulo-pagina">
    <div class="row">
        <div class="col-sm-12">
            <h2>Administración de preguntas</h2>
        </div>
    </div>
</section>

<section class="preguntas-profesor">
    <div class="row">
        <div class="col-sm-12">
            @Html.ActionLink("Crear Pregunta","Crear",null,new { @class= "btn btn-primary float-right mb-4" })
        </div>
    </div>

        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-hover display" id="list-preguntas-profesor">
                    <thead class="bg-primary">
                        <tr>
                            <th scope="col">Nro</th>
                            <th scope="col">Clase</th>
                            <th scope="col">Tema</th>
                            <th scope="col">Pregunta</th>
                            <th scope="col">Fecha desde</th>
                            <th scope="col">Fecha Hasta</th>
                            <th scope="col">Evaluar</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (Int32 i = 0; i < 20; i++)
                        {
                            if ((i + 1) % 2 == 1)
                            {
                                <tr class="table-secondary">
                                    <td>@i</td>
                                    <td>Clase @i</td>
                                    <td>Nombre del Tema @i</td>
                                    <td>@Html.ActionLink("¿Pregunta de la clase, tema ?","Ver")</td>
                                    <td>14/14/14/ 14:14:14</td>
                                    <td>14/14/14/ 14:14:14</td>
                                    <td><a href="#"><i class="fas fa-search"></i></a></td>
                                    <td><a href="#"><i class="fas fa-trash-alt"></i></a></td>
                                </tr>
                            }
                            else
                            {
                                <tr class="table-primary">
                                    <td>@i</td>
                                    <td>Clase @i</td>
                                    <td>Nombre del Tema @i</td>
                                    <td>@Html.ActionLink("¿Pregunta de la clase, tema ?", "Ver")</td>
                                    <td>14/14/14/ 14:14:14</td>
                                    <td>14/14/14/ 14:14:14</td>
                                    <td><a href="#"><i class="fas fa-search"></i></a></td>
                                    <td><a href="#"><i class="fas fa-trash-alt"></i></a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
</section>