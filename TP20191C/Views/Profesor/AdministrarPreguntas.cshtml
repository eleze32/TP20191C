
@{
    ViewBag.Title = "Administrar";
    Layout = "~/Views/Shared/ProfesoresLayout.cshtml";
}


@Scripts.Render("~/bundles/admin-pregutas")
<section class="titulo-pagina">
    <div class="row">
        <div class="col-sm-12">
            <h2>Administración de preguntas</h2>
        </div>
    </div>
</section>

<section class="preguntas-profesor">
    <div class="row">
        <div class="col-sm-12">
            @Html.ActionLink("Crear Pregunta", "Crear", null, new { @class = "btn btn-primary float-right mb-4" })
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-hover display" id="list-preguntas-profesor">
                <thead class="bg-primary">
                    <tr>
                        <th scope="col">Nro</th>
                        <th scope="col">Clase</th>
                        <th scope="col">Tema</th>
                        <th scope="col">Pregunta</th>
                        <th scope="col">Fecha desde</th>
                        <th scope="col">Fecha Hasta</th>
                        <th scope="col">Evaluar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.Preguntas)
                    {
                       
                    <tr>
                        <td>@item.Nro</td>
                        <td>@item.Clase.Nombre</td>
                        <td>@item.Tema.Nombre</td>
                        <td>@Html.ActionLink((string)item.Pregunta1, "ModificarPregunta", "Profesor")</td>
                        <td>@item.FechaDisponibleDesde</td>
                        <td>@item.FechaDisponibleHasta</td>
                        <td>@Html.ActionLink(" ","EvaluarRespuesta", "Profesor", 
                           new { idPregunta = item.IdPregunta , filtro=-1 }, new { @class = "fas fa-search" })</td>
                        <td><a href="#"><i class="fas fa-trash-alt"></i></a></td>
                    </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</section>