@model List<Entidades.Pregunta>
@{
    ViewBag.Title = "Administrar";
    Layout = "~/Views/Shared/ProfesoresLayout.cshtml";
}


@Scripts.Render("~/bundles/admin-pregutas")
<section class="titulo-pagina">
    <div class="row">
        <div class="col-sm-12">
            <h2>Administración de preguntas</h2>
        </div>
    </div>
</section>

<section class="preguntas-profesor">
    <div class="row">
        <div class="col-sm-12">
            @Html.ActionLink("Crear Pregunta", "CrearPregunta", null, new { @class = "btn btn-primary float-right mb-4" })
        </div>
    </div>
    
    <div class="modal fade" id="mensaje" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-danger">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
                
            </div>
        </div>
    </div>    
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-hover display" id="list-preguntas-profesor">
                <thead class="bg-primary">
                    <tr>
                        <th scope="col">Nro</th>
                        <th scope="col">Clase</th>
                        <th scope="col">Tema</th>
                        <th scope="col">Pregunta</th>
                        <th scope="col">Fecha desde</th>
                        <th scope="col">Fecha Hasta</th>
                        <th scope="col">Evaluar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0; }
                    @foreach (Entidades.Pregunta preg in Model)
                    {
                        if (i % 2 == 1)
                        {
                            <tr class="table-secondary" id="fila_@preg.IdPregunta">
                                <td>@preg.Nro</td>
                                <td>@preg.Clase.Nombre</td>
                                <td>@preg.Tema.Nombre</td>
                                <td>@Html.ActionLink(preg.Pregunta1, "ModificarPregunta", "Profesor", new { id = preg.IdPregunta }, new { @class = "text-primary" })</td>
                                <td>@preg.FechaDisponibleDesde</td>
                                <td>@preg.FechaDisponibleHasta</td>
                                <td><a href="/Profesor/EvaluarRespuestas/@preg.IdPregunta" class="text-primary"><i class="fas fa-search"></i></a></td>
                                <td><a href="#" class="text-primary eliminar-pregunta" data-id="@preg.IdPregunta" data-toggle="modal" data-target="#mensaje"><i class="fas fa-trash-alt"></i></a></td>
                            </tr>
                        }
                        else
                        {
                            <tr class="table-primary" id="fila_@preg.IdPregunta">
                                <td>@preg.Nro</td>
                                <td>@preg.Clase.Nombre</td>
                                <td>@preg.Tema.Nombre</td>
                                <td>@Html.ActionLink(preg.Pregunta1, "ModificarPregunta", "Profesor", new { id = preg.IdPregunta }, null)</td>
                                <td>@preg.FechaDisponibleDesde</td>
                                <td>@preg.FechaDisponibleHasta</td>
                                <td><a href="/Profesor/EvaluarRespuestas/@preg.IdPregunta"><i class="fas fa-search"></i></a></td>
                                <td><a href="#" class="eliminar-pregunta" data-id="@preg.IdPregunta" data-toggle="modal" data-target="#mensaje"><i class="fas fa-trash-alt"></i></a></td>
                            </tr>
                        }
                        i++;
                    }



                </tbody>
            </table>
        </div>
    </div>
</section>