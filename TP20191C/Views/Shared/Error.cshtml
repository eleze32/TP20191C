@{
    Layout = "~/Views/Shared/AnonimoLayout.cshtml";
}

<div class="page-wrap d-flex flex-row align-items-center bg-info" id="error">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <h1 class="display-1 text-white">@ViewBag.NroError <i class="fa fa-exclamation-triangle text-danger"></i></h1>
